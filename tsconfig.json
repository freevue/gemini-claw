{
  "compilerOptions": {
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ESNext"],
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src"
  }
}